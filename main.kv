<Menu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Ver viagens planejadas'
            on_press: app.tela_menu_viagens_planejadas(self)
        Button:
            text: 'Planejar viagem interplanet√°ria'
            on_press: app.tela_menu_planejar(self)


<ViagensPlanejadas>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Viagens planejadas'
        GridLayout:
            cols: 1
            id: viagens_reservadas



<PlanejarViagem>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Escolha seu destino'
        Button:
            text: 'Lua'
            on_press: app.tela_lua_viagens(self)
        Button:
            text: 'Marte'
            on_press: app.tela_marte_viagens(self)
        Button:
            text: 'Jupiter'
            on_press: app.tela_jupiter_viagens(self)

<MarteViagens>:
    GridLayout:
        cols: 1
