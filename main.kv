<Menu>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Ver viagens planejadas'
                on_press: app.tela_menu_viagens_planejadas()
            Button:
                text: 'Planejar viagem interplanet√°ria'
                on_press: app.tela_menu_planejar()


<ViagensPlanejadas>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Viagens planejadas'
        ScrollView:
            size_hint: (1, 1)
            GridLayout:
                cols: 1
                id: viagens_reservadas
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "70dp"
                spacing: "10dp"



<PlanejarViagem>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Escolha seu destino'
        Button:
            text: 'Lua'
            on_press: app.tela_lua_viagens()
        Button:
            text: 'Marte'
            on_press: app.tela_marte_viagens()
        Button:
            text: 'Jupiter'
            on_press: app.tela_jupiter_viagens()

<MarteViagens>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Escolha uma das viagens abaixo'
        ScrollView:
            size_hint: (1, 1)
            GridLayout:
                cols: 1
                id: viagens_grid
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "70dp"
                spacing: "10dp"

